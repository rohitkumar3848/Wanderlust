<%layout("/layouts/boilerPlate")%>
<div class="row mt-3">
    <h1 class="col-6 offset-3 mt-3" >SingUp on Wanderlust</h1>
    <div class="col-6 offset-3 mt-6" >
        <form method="post" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input name="username" id="username" class="form-control"  type="text" required/>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input name="email" id="email" class="form-control"  type="email" required/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input name="password" id="password" class="form-control"  type="password" required/>
            </div>
            <button class="btn btn-success">SingUp</button>
        </form>
    </div>
</div>